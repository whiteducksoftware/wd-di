{
    "python.testing.pytestArgs": [
        "tests"
    ],
    "python.envFile": "${workspaceFolder}/.env",
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "python.testing.autoTestDiscoverOnSaveEnabled": true,
    "editor.formatOnSave": false,
    "editor.codeActionsOnSave": {
        "source.organizeImports.ruff": "always",
        "source.fixAll.ruff": "always"
    },
    "editor.fontFamily": "'Jetbrains Mono', 'FiraCode Nerd Font', 'Hack Nerd Font', 'monospace'",
    "editor.smoothScrolling": true,
    "terminal.integrated.fontFamily": "'Jetbrains Mono', 'FiraCode Nerd Font', 'Hack Nerd Font', 'monospace'",
    "editor.renderWhitespace": "none",
    //"terminal.integrated.lineHeight": 1.5,
    "editor.fontSize": 15.5,
    "editor.fontLigatures": true,
    "editor.lineHeight": 1.5,
    "editor.minimap.enabled": false,
    "editor.tabSize": 2,
    "editor.semanticTokenColorCustomizations": {
        "enabled": true
    },
    "editor.semanticHighlighting.enabled": true,
    // we try to make semantic highlighting look good
    // prevent VSCode from modifying the terminal colors
    "terminal.integrated.minimumContrastRatio": 1,
    "cSpell.words": [
        "asyncio",
        "chromadb",
        "cloudpickle",
        "deptry",
        "docling",
        "dotenv",
        "dspy",
        "duckduckgo",
        "fastapi",
        "fasthtml",
        "gradio",
        "htmlcov",
        "httpx",
        "ipywidgets",
        "isort",
        "litellm",
        "loguru",
        "markdownify",
        "matplotlib",
        "minversion",
        "mkdocs",
        "mkdocstrings",
        "msgpack",
        "msgspec",
        "mypy",
        "nltk",
        "packb",
        "poethepoet",
        "psutil",
        "pycache",
        "pycodestyle",
        "pydantic",
        "pydocstyle",
        "pyflakes",
        "pyinstrument",
        "pytest",
        "pyupgrade",
        "pyyaml",
        "Ratzenberger",
        "respx",
        "tavily",
        "temporalio",
        "testpaths",
        "tiktoken",
        "tqdm",
        "unpackb",
        "uvicorn"
    ],
    "yaml.schemas": {
        "https://squidfunk.github.io/mkdocs-material/schema.json": "mkdocs.yml"
    },
    "AREPL.customCSS": ".print { font-size: var(--vscode-editor-font-size); } .renderjson { font-family: var(--vscode-editor-font-family); font-size: var(--vscode-editor-font-size); line-height: initial; }",
    "yaml.customTags": [
        "!ENV scalar",
        "!ENV sequence",
        "!relative scalar",
        "tag:yaml.org,2002:python/name:material.extensions.emoji.to_svg",
        "tag:yaml.org,2002:python/name:material.extensions.emoji.twemoji",
        "tag:yaml.org,2002:python/name:pymdownx.superfences.fence_code_format",
        "tag:yaml.org,2002:python/object/apply:pymdownx.slugs.slugify mapping"
    ],
    "editor.guides.indentation": false
}